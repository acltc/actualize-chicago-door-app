<form class="form-inline mb-2" method="GET" action="/users">
  <div class="form-group">
    <input type="hidden" name="page" value=0>
    <input class="form-control mr-2" id="search" type="text" name="query" value="<%= @query %>" placeholder="Enter search terms here...">
  </div>
  <input class="btn btn-secondary" type="submit" value="Search">
</form>
<div style="height: 70vh; width: 100%; overflow: auto;">
  <table class="table table-hover table-dark">
    <thead class="thead-light">
      <tr>
        <th scope="col">id</th>
        <th scope="col">first name</th>
        <th scope="col">last name</th>
        <th scope="col">email</th>
        <th scope="col">start date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.start_date %></td>
        <td>
        <a class="btn btn-sm btn-secondary" href="/users/<%= user.id %>/edit">Edit</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <% if @page == 0%>
      <a class="btn btn-light disabled"> < </a>
    <% else %>
      <a class="btn btn-light" href="/users?page=<%= @page - 1 %>&query=<%= @query %>"> < </a>
    <% end %>
    <% if @page < @page_last %>
      <a class="btn btn-light" href="/users?page=<%= @page + 1 %>&query=<%= @query %>"> > </a>
    <% else %>
      <a class="btn btn-light disabled"> > </a>
    <% end %>
    <span><%= @page + 1 %> / <%= @page_last + 1 %></span>
  </div>
</div>
